{
  "name": "fmontes-flayyer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "flayyer start",
    "build": "flayyer build",
    "deploy": "flayyer deploy",
    "format": "xo --fix"
  },
  "dependencies": {
    "@flayyer/flayyer-types": "^1.11.1",
