    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@flayyer/cli": "^1.17.4",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@tailwindcss/postcss7-compat": "^2.1.2",
    "@types/react": "^17.0.4",
    "autoprefixer": "^9",
    "dotenv": "^8.2.0",
    "eslint-config-xo-react": "^0.25.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "postcss": "^7",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "typescript": "^4.2.4",
    "xo": "^0.39.1"
  },
  "xo": {
    "prettier": true,
